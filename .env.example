# CyberGuard Academy Configuration

# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Model Configuration  
GEMINI_PRO_MODEL=gemini-2.5-pro
GEMINI_FLASH_MODEL=gemini-2.5-flash
DEFAULT_TEMPERATURE_GAME_MASTER=0.3
DEFAULT_TEMPERATURE_THREAT_ACTORS=0.7

# Agent Configuration
MAX_CONVERSATION_TURNS=15
DEFAULT_DIFFICULTY_LEVEL=3
TARGET_SUCCESS_RATE=0.7
SESSION_TIMEOUT_MINUTES=30

# Google Cloud Configuration (populate these from environment)
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_REGION=us-central1
VERTEX_AI_LOCATION=us-central1

# Security Configuration
SAFE_REDIRECT_BASE_URL=https://cyberguard.academy/safe-redirect
ANONYMOUS_USER_ID_SALT=your-secret-salt-here

# Observability Configuration
CLOUD_TRACE_ENABLED=true
STRUCTURED_LOGGING_ENABLED=true
METRICS_COLLECTION_ENABLED=true

# Development Configuration
MOCK_AGENTS_IN_TESTS=true
USE_LOCAL_STORAGE=true
SKIP_EXTERNAL_APIS=false